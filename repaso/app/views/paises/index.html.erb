<p id="notice"><%= notice %></p>

<h1>Paises</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paises.each do |paise| %>
      <tr>
        <td><%= paise.nombre %></td>
        <td><%= link_to 'Ver', paise %></td>
        <td><%= link_to 'Editar', edit_paise_path(paise) %></td>
        <td><%= link_to 'Borrar', paise, method: :delete, data: { confirm: 'Estas Segure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_paise_path %>
